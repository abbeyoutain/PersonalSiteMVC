@{
    ViewBag.Title = "Portfolio";
}

<h2>@ViewBag.Title</h2>

<!-- ======= Main ======= -->
<main id="main">

    <!-- ======= Portfolio Section ======= -->
    <section id="portfolio" class="portfolio">
        <div class="container">

            <div class="section-title">
                <h2>Portfolio</h2>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <ul id="portfolio-flters">
                        <li data-filter="*" class="filter-active">All</li>
                        <li data-filter=".filter-html">HTML</li>
                        <li data-filter=".filter-csharp">C#</li>
                        <li data-filter=".filter-mvc">MVC</li>
                        <li data-filter=".filter-api">API</li>
                        <li data-filter=".filter-react">React</li>
                    </ul>
                </div>
            </div>

            <div class="row portfolio-container">

                <div class="col-lg-4 col-md-6 filter-html">
                    <div class="portfolio-item">
                        <img src="/Content/assets/img/pen.png" class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <h3><a href="http://www.f1sp.abbey-outain.com/" target="_blank" title="Click to view site">Academy of Literary Heroines</a></h3>
                            <a href="https://www.github.com/abbeyoutain/FED1StudioProject/" target="_blank" title="Click to view repo"><i class="fab fa-github"></i></a>
