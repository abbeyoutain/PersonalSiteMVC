@{
    ViewBag.Title = "Portfolio";
}

<h2>@ViewBag.Title</h2>

<!-- ======= Main ======= -->
<main id="main">

    <!-- ======= Portfolio Section ======= -->
    <section id="portfolio" class="portfolio">
        <div class="container">

            <div class="section-title">
                <h2>Portfolio</h2>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <ul id="portfolio-flters">
                        <li data-filter="*" class="filter-active">All</li>
                        <li data-filter=".filter-app">HTML + CSS</li>
                        <li data-filter=".filter-card">SQL</li>
                        <li data-filter=".filter-web">C#</li>
                    </ul>
                </div>
            </div>

            <div class="row portfolio-container">

                <div class="col-lg-4 col-md-6 filter-app">
                    <div class="portfolio-item">
                        <img src="/Content/assets/img/pen.png" class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <h3><a href="/Content/assets/img/pen.png" data-gall="portfolioGallery" class="venobox" title="App 1">Academy of Literary Heroines</a></h3>
                            <a href="/Content/assets/img/pen.png" data-gall="portfolioGallery" class="venobox" title="App 1"><i class="icofont-plus"></i></a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 filter-web">
                    <div class="portfolio-item">
                        <img src="/Content/assets/img/castle.jpg" class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <h3><a href="/Content/assets/img/castle.jpg" data-gall="portfolioGallery" class="venobox" title="Web 3">Queen Titania's Castle</a></h3>
                            <a href="/Content/assets/img/castle.jpg" data-gall="portfolioGallery" class="venobox" title="Web 3"><i class="icofont-plus"></i></a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 filter-card">
                    <div class="portfolio-item">
                        <img src="/Content/assets/img/sword.jpg" class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <h3><a href="/Content/assets/img/sword.jpg" data-gall="portfolioGallery" class="venobox" title="Card 2">Magic Item Store</a></h3>
                            <a href="/Content/assets/img/sword.jpg" data-gall="portfolioGallery" class="venobox" title="Card 2"><i class="icofont-plus"></i></a>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </section><!-- End Portfolio Section -->

</main>